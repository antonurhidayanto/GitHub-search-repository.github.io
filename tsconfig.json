
{
  "compilerOptions": {
    "target": "ES5",                       
    "module": "ESNext",                   
    "moduleResolution": "node",            
    "esModuleInterop": true,              
    "jsx": "react-jsx",        
    "strict": true,               
    "skipLibCheck": true,                 
    "forceConsistentCasingInFileNames": true,  
    "allowJs": true,   
    "isolatedModules": true,              
    "resolveJsonModule": true        
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
