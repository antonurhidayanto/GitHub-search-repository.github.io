{
  "compilerOptions": {
    "jsx": "react-jsx",  // React JSX transformation
    "esModuleInterop": true,  // Allows compatibility with CommonJS modules
    "target": "ESNext",  // Use modern JavaScript (import/export)
    "strict": true,  // Enable strict type checking
    "allowJs": true,  // Allow JavaScript files to be included in the project
    "skipLibCheck": true,  // Skip type checking for declaration files
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
  },
  "include": [
    "src/**/*"
  ]
}

