{
  "compilerOptions": {
    "jsx": "react-jsx",  
    "esModuleInterop": true,  
    "target": "ESNext",  
    "strict": true,  
    "allowJs": true, 
    "skipLibCheck": true, 
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
  },
  "include": [
    "src/**/*"
  ]
}

